@page "/"
@using src.Web.Models
@using src.Web.Data

<h1>Products - Updated V3 from AKS Deployment - last run</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Image File</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ProductContext.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Description</td>
                <td>@item.ImageFile</td>
                <td>@item.Price?.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>